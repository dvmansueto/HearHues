<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="net.dvmansueto.hearhues.AboutFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/about_project_heading"
        android:text="@string/about_project_heading"
        android:textAppearance="@style/Headline"
        android:paddingTop="16dp"
        android:paddingBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/about_project_body"
        android:text="@string/about_project_body"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/about_neil_harbisson"
        android:src="@drawable/neil_harbisson"
        android:contentDescription="@string/about_iv_neil_harbisson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
